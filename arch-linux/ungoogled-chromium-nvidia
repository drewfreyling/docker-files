FROM sandrokeil/archlinux-nvidia:latest
COPY arch-aur-install /usr/bin
RUN pacman -Sy --noconfirm llvm-libs
RUN pacman -Sy --needed --noconfirm sudo patch gzip git gcc make pkg-config diffutils file \
    && useradd builduser -m \
    && passwd -d builduser \
    && printf 'builduser ALL=(ALL) ALL\n' | tee -a /etc/sudoers \
  && sudo -u builduser bash -c 'cd ~ && mkdir tmp && cd tmp && arch-aur-install https://aur.archlinux.org/cgit/aur.git/snapshot/ungoogled-chromium.tar.gz' \
    && userdel -r builduser \
    && pacman -Rs --noconfirm git gcc make \
    && pacman -Scc --noconfirm
ENTRYPOINT ["/usr/bin/chromium"]
